{
  "name": "pokedex-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build:server": "pnpm --filter @pokedex/server build",
    "dev:client": "pnpm build:server && pnpm --filter @pokedex/client dev",
    "dev:server": "pnpm --filter @pokedex/server start",
    "dev:inspect": "pnpm --filter @pokedex/server inspect",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:packages": "pnpm -r run lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --build --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  }
}
