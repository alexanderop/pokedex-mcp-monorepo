{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": false,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "references": [
    { "path": "./packages/server" },
    { "path": "./packages/client" }
  ],
  "include": [],
  "exclude": ["node_modules", "**/dist"]
}